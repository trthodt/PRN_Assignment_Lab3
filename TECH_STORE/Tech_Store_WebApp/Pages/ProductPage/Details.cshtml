@page
@model Tech_Store_WebApp.Pages.ProductPage.DetailsModel

@{
    ViewData["Title"] = "Product Details";
    string role = HttpContext.Session.GetString("Role");
    if (!"admin".Equals(role))
    {
        Response.Redirect("/Login");
    }
}

<h1>Product Details</h1>

<div class="card">
    <div class="card-header">
        <h4>Product Information</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.ProductName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.Description)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.Price)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product.Quantity)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.Quantity)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product.CreatedAt)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.CreatedAt)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product.Category)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.Category.CategoryName)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Product?.Id" class="btn btn-warning">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
