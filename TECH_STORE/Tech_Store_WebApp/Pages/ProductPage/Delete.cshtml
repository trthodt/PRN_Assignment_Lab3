@page
@model Tech_Store_WebApp.Pages.ProductPage.DeleteModel

@{
    ViewData["Title"] = "Delete Product";
    string role = HttpContext.Session.GetString("Role");
    if (!"admin".Equals(role))
    {
        Response.Redirect("/Login");
    }
}

<h1>Delete Product</h1>

<div class="card">
    <div class="card-header">
        <h4>Confirm Deletion</h4>
    </div>
    <div class="card-body">
        <h3>Are you sure you want to delete this product?</h3>
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.ProductName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.Description)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.Price)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product.Quantity)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.Quantity)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product.CreatedAt)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.CreatedAt)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product.Category)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.Category.CategoryName)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Product.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
